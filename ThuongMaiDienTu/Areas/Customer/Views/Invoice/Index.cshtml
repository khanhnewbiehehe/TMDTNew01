@model IEnumerable<ThuongMaiDienTu.Models.Invoice>

<div class="container p-5">
    <div class="mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="blue" width="16px" class="me-2" viewBox="0 0 576 512">
                            <path d="M575.8 255.5c0 18-15 32.1-32 32.1l-32 0 .7 160.2c0 2.7-.2 5.4-.5 8.1l0 16.2c0 22.1-17.9 40-40 40l-16 0c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1L416 512l-24 0c-22.1 0-40-17.9-40-40l0-24 0-64c0-17.7-14.3-32-32-32l-64 0c-17.7 0-32 14.3-32 32l0 64 0 24c0 22.1-17.9 40-40 40l-24 0-31.9 0c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2l-16 0c-22.1 0-40-17.9-40-40l0-112c0-.9 0-1.9 .1-2.8l0-69.7-32 0c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z" />
                        </svg>
                        Home
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Quản lý đơn hàng</li>
            </ol>
        </nav>
    </div>
    <div class="mt-3">
        <div class="card shadow cart-card mx-auto">
            <div class="card-header">
                Đơn đặt hàng
            </div>
            <div class="card-body p-5">
                @{
                    foreach(var item in Model)
                    {
                        <div class="card shadow order-item mb-3">
                            <div class="row">
                                <div class="col-3">
                                    <div class="card-image">
                                        <img src="@item.InvoiceItems.FirstOrDefault().ProductType.ProductLaunch.Product.Images.FirstOrDefault().Url" alt="Ảnh sản phẩm"></img>
                                    </div>
                                </div>
                                <div class="col-9">
                                    <div class="card-body h-100 d-flex flex-column justify-content-between ">
                                        <div class="d-flex justify-content-between">
                                            <div class="card-title m-0 p-0">@item.InvoiceItems.FirstOrDefault().ProductType.ProductLaunch.Product.Name</div>
                                            @if(item.Status == 0)
                                            {
                                                <div class="badge bg-warning m-0 p-2">Đã cọc</div>
                                            }
                                            else if(item.Status == -1)
                                            {
                                                <div class="badge bg-danger m-0 p-2">Hủy</div>
                                            }
                                            else if (item.Status == 1)
                                            {
                                                <div class="badge bg-success m-0 p-2">Đã thanh toán</div>
                                            }
                                            else
                                            {
                                                <div class="badge bg-dark m-0 p-2">Khác</div>
                                            }
                                        </div>
                                        <div class="d-flex justify-content-end">
                                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Xem chi tiết</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                
            </div>
        </div>
    </div>
</div>

<div class="order-modal modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div>
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Chi tiết đơn đặt hàng</h1>
                </div>    
                <button type="button" data-bs-dismiss="modal" aria-label="Close">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="white" width="20px" viewBox="0 0 384 512">
                        <path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z" />
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="card shadow mt-3 p-3">
                    <div class="row">
                        <div class="col-3">
                            <div class="card-image shadow">
                                <img src="/assets/images/product13.jpg" alt="Ảnh sản phẩm"></img>
                            </div> 
                        </div>
                        <div class="col-9">
                            <div><strong>Loại sản phẩm:</strong> Màu đỏ</div>
                            <div><strong>Số lượng:</strong> 12</div>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>